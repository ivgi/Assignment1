<rests xmlns="http://camel.apache.org/schema/spring">
    <rest path="/say">
        <get uri="/hello">
            <to uri="direct:hello"/>
        </get>
        <get uri="/bye" consumes="application/json">
            <to uri="direct:bye"/>
        </get>
        <post uri="/bye">
            <to uri="mock:update"/>
        </post>
    </rest>
</rests>
